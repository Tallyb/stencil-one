{
  "env":{
    "browser":true,
    "es6":true,
    "node":true
  },
  "extends":[
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "globals":{
    "Atomics":"readonly",
    "SharedArrayBuffer":"readonly"
  },
  "parser":"@typescript-eslint/parser",
  "parserOptions":{
    "ecmaVersion":11,
    "sourceType":"module",
    "jsx":true,
    "project":"./tsconfig.json"
  },
  "plugins":[
    "@typescript-eslint",
    "jest",
    "import"
  ],
  "rules":{
    "indent":[
      "error",
      2
    ],
    "linebreak-style":[
      "error",
      "unix"
    ],
    "quotes":[
      "error",
      "single"
    ],
    "semi":[
      "error",
      "always"
    ]
  },
  "settings":{
    "react":{
      "pragma":"h",
      "version":"detect"
    }
  },
  "overrides":[
    {
      "files":[
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "rules":{
        "@typescript-eslint/no-unused-vars":[
          2,
          {
            "args":"none"
          }
        ]
      }
    }
  ]
}