{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src",
    "stencil.config.ts"
  ],
  "exclude": ["src/components.d.ts"]
}
